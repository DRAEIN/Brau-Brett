<%= form_for @job, html: { multipart: true } do |j| %>
  <%= j.label :Titel %><br />
  <%= j.text_field :Titel %>

  <%= j.label :Beschreibung %>
  <%= j.text_area :Beschreibung %><br />

  <%= j.label :Ort %><br />
  <%= j.text_field :Ort %>

  <%= j.file_field :avatar %>
  <hr>
  <%= j.submit "Job einstellen" %>
<% end %> 